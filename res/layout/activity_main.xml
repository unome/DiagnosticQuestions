<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:text="Number and Question , What is blah blah fasff ffsdf  fjdfjsd fdsghdfg wer sfd gfg"
        android:textSize="18dip" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="31dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="265dp" >
            </TableLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_prevQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="19dp"
        android:onClick="onClickHandler"
        android:text="Prev Question" />

    <Button
        android:id="@+id/button_skipQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_prevQuestion"
        android:layout_alignBottom="@+id/button_prevQuestion"
        android:layout_alignParentRight="true"
        android:onClick="onClickHandler"
        android:text="Skip Question" />

    <Button
        android:id="@+id/button_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_skipQuestion"
        android:layout_alignBottom="@+id/button_skipQuestion"
        android:layout_toLeftOf="@+id/button_skipQuestion"
        android:layout_toRightOf="@+id/button_prevQuestion"
        android:text="Done" />

</RelativeLayout>
